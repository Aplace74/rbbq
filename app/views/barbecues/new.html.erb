<div class="form">
<h2 class="text-center">Add your Barbecue</h2>
	<%= simple_form_for [@user, @barbecue] do |f| %>
		<%= f.input :name %>
		<%= f.input :description, as: :text %>
		<%= f.input :address %>
		<%= f.input :model %>
		<%= f.input :price, as: :float %>
		<%= f.input :types, collection: Barbecue::TYPES %>
		<%= f.input :capacity, as: :integer %>
		<%= f.input :pictures %>
  		<%= f.input :pictures_cache, as: :hidden %>
	<div class ="align-button-center">
		<% if policy(Barbecue).create? %>
			<%= f.submit class: "btn btn-success w-100 my-3" do %>
				<%= link_to 'New barbecue', new_barbecue_path %>
			<% end %>
		<% end %>
	</div>	
	<% end %>
</div>
