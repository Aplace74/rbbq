<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dwptvy074/image/upload/v1558968003/barbecue-cover_ml41ba.jpg);">
  <div class="container">
    <h1>AIRBBQ</h1>
    <p>Find a Barbecue</p>
    <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    </form>
  </div>
</div>

<div class="cards">

  <% @barbecues.each do |b| %>
    <div class="card-trip">
      <%= cl_image_tag b.pictures, height: 300, width: 400, crop: :fill %>
      <div class="card-trip-infos">
        <div>
          <h2><%= b.name %></h2>
        </div>
        <h2 class="card-trip-pricing"><%= b.price %> â‚¬</h2>
        <%= cl_image_tag b.user.avatar, height: 300, width: 400, crop: :fill, class: "card-trip-user avatar" %>
      </div>
    </div>
  <% end %>

</div>