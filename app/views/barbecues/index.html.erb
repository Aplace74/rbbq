<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dwptvy074/image/upload/v1558968003/barbecue-cover_ml41ba.jpg);">
	<div class="container">
		<h1>AirBBQ</h1>
		<p>Find the perfect Barbecue nearby</p>
		<form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
			<div class="search-form-control form-group">
				<input class="form-control string required mr-sm-2" type="text" placeholder="Search" name="search[query]" id="search_query" aria-label="Search">
			</div>
		</form>
	</div>
</div>

<div class="cards">
	<% @barbecues.each do |barbecue| %>
		<%= render 'shared/card', barbecue: barbecue %>
	<% end %>
</div>
