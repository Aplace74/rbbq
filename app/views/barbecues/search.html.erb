<div class="container">
	<div
        id="map"
        style="width: 100%;
        height: 250px;"
        data-markers="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
	</div>
	<div class="cards">
		<% @barbecues.each do |barbecue| %>
			<%= render 'shared/card', barbecue: barbecue %>
		<% end %>
	</div>
</div>
