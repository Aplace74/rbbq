<div class="container">

  <div class="row">
    <div class="col-12 col-lg-5">
      <div class="part contact">
      <div class="text-center py-3" style="border-bottom: 1px solid gray;"><%= cl_image_tag @user.avatar, height: 70, width: 70, crop: :fill, class: "rounded-circle" %></div>
      <h2><%= @user.first_name %> <%= @user.last_name %></h1>
        <p><i class="fas fa-phone"></i> <%= @user.phone %></p>
        <p><i class="fas fa-envelope"></i> <%= @user.email %></p>
        <div class="text-center"><button class="btn btn-success">Send Message</button></div>
      </div>
    </div>

    <div class="col-12 col-lg-7">
      <div class="part cards d-flex">
        <h2 class="text-center m-3"><%= @user.first_name %>'s barbecues (<%= @user.barbecues.count %>)</h2>
          <% @user.barbecues.each do |barbecue| %>
            <%= render 'shared/card', barbecue: barbecue %>
          <% end %>
      </div>
    </div>
  </div>
</div>
